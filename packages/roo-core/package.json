{
  "name": "@roo-code/core",
  "version": "0.1.0",
  "description": "Standalone Roo-Code engine with platform-independent AI coding assistant capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./engine": {
      "types": "./dist/engine/index.d.ts",
      "require": "./dist/engine/index.js",
      "import": "./dist/engine/index.mjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "require": "./dist/tools/index.js",
      "import": "./dist/tools/index.mjs"
    },
    "./abstractions": {
      "types": "./dist/abstractions/index.d.ts",
      "require": "./dist/abstractions/index.js",
      "import": "./dist/abstractions/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "example:basic": "node examples/basic-usage.js",
    "example:api": "node examples/api-server.js"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "automation",
    "roo-code",
    "nodejs",
    "typescript",
    "platform-independent"
  ],
  "author": "Roo-Code Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/roo-code/roo-code.git",
    "directory": "packages/roo-core"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@roo-code/types": "workspace:*",
    "@roo-code/telemetry": "workspace:*",
    "@roo-code/cloud": "workspace:*",
    "delay": "^6.0.0",
    "p-wait-for": "^5.0.2",
    "serialize-error": "^11.0.3",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "mime-types": "^2.1.35",
    "crypto": "^1.0.1",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/mime-types": "^2.1.4",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 